source "https://rubygems.org"

# development dependencies
group :development do
  gem "pry"
  gem "pry-byebug"
end

# test dependencies
group :development, :test do
  gem "rspec"
  gem "simplecov"
  gem 'codecov', require: false
  gem "test_construct"
end

# application runtime dependencies
gem "activesupport"
gem "gem_logger"
gem "logging"
gem "clamp"
gem "liquid"
gem "mimemagic"
gem "dotenv"
gem "java-properties"
